<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.Views.NetworkView"
             Title="Network Detection">
    <StackLayout>
        <TableView Intent="Form">
            <TableView.Root>
                <TableRoot>
                    <TableSection Title="Status">
                        <SwitchCell Text="Connected" On="{Binding Network.IsConnected, Mode=OneWay}" />
                        <SwitchCell Text="Internet Available" On="{Binding Network.IsInternetAvailable, Mode=OneWay}" />
                        <SwitchCell Text="WiFi" On="{Binding Network.IsWifi, Mode=OneWay}" />
                        <SwitchCell Text="Data Carrier" On="{Binding Network.IsMobile, Mode=OneWay}" />
                    </TableSection>
                    <TableSection Title="Reachability Test">
                        <EntryCell Label="Host" Text="{Binding Host}" />
                        <ViewCell>
                            <ViewCell.View>
                                <Button Text="Check" Command="{Binding Check}" />
                            </ViewCell.View>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView.Root>
        </TableView>
    </StackLayout>
</ContentPage>