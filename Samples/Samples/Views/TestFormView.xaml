<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:acr="clr-namespace:Acr.XamForms.Controls;assembly=Acr.XamForms.Controls"
             x:Class="Samples.Views.TestFormView">

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Save" Command="{Binding Save}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>
            <TableView Intent="Form">
                <TableView.Root>
                    <TableSection Title="Your Info">
                        <acr:EntryCell Label="First Name" Placeholder="first name" BindingContext="{Binding FirstName}" Text="{Binding Value}" />
                        <acr:TextCell TextColor="Red" BindingContext="{Binding FirstName}" IsVisible="{Binding IsInvalid}" Text="{Binding ErrorMessage}" />

                        <acr:EntryCell Label="Last Name" Placeholder="last name" BindingContext="{Binding LastName}" Text="{Binding Value}" />
                        <acr:TextCell TextColor="Red" BindingContext="{Binding LastName}" IsVisible="{Binding IsInvalid}" Text="{Binding ErrorMessage}" />

                        <acr:EntryCell Label="E-Mail" Placeholder="address" BindingContext="{Binding Email}" Text="{Binding Value}" />
                        <acr:TextCell TextColor="Red" BindingContext="{Binding Email}" IsVisible="{Binding IsInvalid}" Text="{Binding ErrorMessage}" />

                        <acr:EntryCell Label="Password" Placeholder="password" BindingContext="{Binding Password}" IsPassword="true" Text="{Binding Value}" />
                        <acr:TextCell TextColor="Red" BindingContext="{Binding Password}" IsVisible="{Binding IsInvalid}" Text="{Binding ErrorMessage}" />

                        <acr:TextCell TextColor="Blue" BindingContext="{Binding FirstName}" Text="{Binding Value, StringFormat='Test Property Binding - {0}'}" />
                    </TableSection>
                </TableView.Root>
            </TableView>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>