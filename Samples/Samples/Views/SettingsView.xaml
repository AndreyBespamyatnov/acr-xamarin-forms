<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:acr="clr-namespace:Acr.XamForms.Converters;assembly=Acr.XamForms"
             xmlns:acrview="clr-namespace:Acr.XamForms.Controls;assembly=Acr.XamForms.Controls"
             x:Class="Samples.Views.SettingsView"
             Title="Settings">
    <ContentPage.Resources>
        <ResourceDictionary>
            <acr:InverseBoolConverter x:Key="Not" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Add" Command="{Binding Add}" />
        <ToolbarItem Name="Clear" Command="{Binding Clear}" />
    </ContentPage.ToolbarItems>
    
    <StackLayout>
        <acrview:ListView ItemClickCommand="{Binding Select}" ItemsSource="{Binding Settings.All}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Key}" Detail="{Binding Value}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </acrview:ListView>
    </StackLayout>
</ContentPage>