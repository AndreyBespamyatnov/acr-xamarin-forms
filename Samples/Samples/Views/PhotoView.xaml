<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       x:Class="Samples.Views.PhotoView">
    <ScrollView>
        <StackLayout>
            <Button Text="Photo From Camera" Command="{Binding FromCamera}" />
            <Button Text="Photo From Gallery" Command="{Binding FromGallery}" />
            <Button Text="Choose" Command="{Binding Choice}" />
        
            <Image Source="{Binding ImagePath}" />
        </StackLayout>
    </ScrollView>
</ContentPage>