<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       x:Class="Samples.Views.SmsView">
    <TableView Intent="Form">
        <TableView.Root>
            <TableRoot>
                <TableSection>
                    <EntryCell Label="Phone Number" Keyboard="Telephone" Text="{Binding PhoneNumber}"  />
                    <EntryCell Label="Message" Text="{Binding Message}" />
                    <TextCell Text="Character Count" Detail="{Binding Count}" />
                    <TextCell Text="Send Message" Command="{Binding Send}" />
                </TableSection>
            </TableRoot>
        </TableView.Root>
    </TableView>
</ContentPage>