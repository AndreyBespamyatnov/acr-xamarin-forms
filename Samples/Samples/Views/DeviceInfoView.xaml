        <Switch IsToggled="{Binding Device.IsRearCameraAvailable}" IsEnabled="False">Primary/Rear Camera</Switch>
        <Switch IsToggled="{Binding Device.IsSimulator}" IsEnabled="False">Simulator Detected</Switch>-->
    </StackLayout>
</ContentPage>