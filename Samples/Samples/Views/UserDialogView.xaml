<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       x:Class="Samples.Views.UserDialogView">
    <ScrollView>
        <StackLayout>
            <Label Text="{Binding Result}" />
            <Button Text="Action Sheet" Command="{Binding ActionSheet}" />
            <Button Text="Alert" Command="{Binding Alert}" />
            <Button Text="Confirm" Command="{Binding Confirm}" />
            <Button Text="Prompt" Command="{Binding Prompt}" />
            <Button Text="Toast" Command="{Binding Toast}" />
            <Button Text="Loading" Command="{Binding Loading}" />
            <Button Text="Loading (No Cancel)" Command="{Binding LoadingNoCancel}" />
            <Button Text="Progress" Command="{Binding Progress}" />
            <Button Text="Progress (No Cancel)" Command="{Binding ProgressNoCancel}" />
        </StackLayout>
    </ScrollView>
</ContentPage>